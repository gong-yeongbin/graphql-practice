generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  email String?

  user_job user_job[]
}

model user_job {
  userId Int
  jobId  Int

  user user @relation(fields: [userId], references: [id])
  job  job  @relation(fields: [jobId], references: [id])

  @@unique([userId, jobId])
}

model job {
  id       Int        @id @default(autoincrement())
  name     String     @unique
  user_job user_job[]
}
